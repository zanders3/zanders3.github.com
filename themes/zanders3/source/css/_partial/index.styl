.imageitem
  clear left
  img
    float left
    width 200px
    margin-right 20px
    @media screen and (max-width: 500px)
      float none
  @media screen and (max-width: 500px)
    border-bottom 1px solid #ddd
    padding-bottom 20px
    margin-bottom 10px
    h2
      margin-top:0 !important
      border-bottom:0 !important

#pagination
  a
    display block
    padding 5px 10px
    background color-border
    color color-meta
    font-family font-title
    text-shadow 0 0 1px #fff
    margin-bottom 50px
    &:hover
      background color-link
      color #fff
      text-decoration none
      text-shadow none

  .prev
    &:before
      content '\f053'
      padding-right 10px
      font-family font-icon

  .next
    &:after
      content '\f054'
      padding-left 10px
      font-family font-icon