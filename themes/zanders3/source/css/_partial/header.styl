#header
  background page-background
  margin-bottom 30px
  box-shadow 0px 1px 10px #b2b2b2
  @media screen and (max-width: 1260px)
    padding-left 30px
    padding-right 30px
#headerinner
  margin 0 auto
  width page-width
  @media screen and (max-width: 1260px)
    width inherit
  a
    color #2E354A
    &:hover
      color color-link
      text-decoration none
    
  h1
    background logo
    font-weight normal
    font-size 32pt
    line-height 25px
    height 90px
    padding-left 130px
    padding-top 50px
    margin-left 10px
    small
      font-size 22px
  
  #main-nav
    font-family font-title
    line-height 2.5em
    font-size 14pt
    margin-right 40px
    ul
      list-style none
      li
        float left
        margin-left 30px
        margin-top 90px